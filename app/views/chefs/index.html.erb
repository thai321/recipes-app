<%= render 'shared/page_title', title: "Chefs listing" %>

<div class="center">
  <%= will_paginate %>
</div>

  <div class="center">
    <% @chefs.each do |chef| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(chef), chef %></li>
            <li class="chef-title"><%= link_to chef.name.capitalize, chef %></li>
            <%= show_count_recipes(chef) %>
          </div>
        </div>
      </ul>
    <% end %>
  </div>

<div class="center">
  <%= will_paginate %>
</div>
