<%= render 'shared/page_title', title: "Chefs listing" %>

<div class="center">
  <%= will_paginate %>
</div>

  <div class="center">
    <% @chefs.each do |chef| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">

            <li><%= link_to gravatar_for(chef), chef %></li>
            <li class="chef-title"><%= link_to chef.name.capitalize, chef %></li>
            <%= show_count_recipes(chef) %>
            <li>
              <%= link_to 'Delete', chef, method: :delete,
                data: {confirm: "Are you sure you want to delete the chef and all associated recipes?"}
              %>
           </li>

          </div>
        </div>
      </ul>
    <% end %>
  </div>

<div class="center">
  <%= will_paginate %>
</div>
