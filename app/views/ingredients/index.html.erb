<%= render 'shared/page_title', title: "Avalilable Ingredients" %>

<div class="center">
  <%= will_paginate %>
</div>

  <div class="center">
    <% @ingredients.each do |ingredient| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">

            <li class="chef-title"><%= link_to ingredient.name.capitalize, ingredient %></li>
            <%= show_count_recipes(ingredient) %>

            <% if logged_in? && current_chef.admin? %>
              <li>
                <%= link_to 'Edit this ingredient', edit_ingredient_path(ingredient),
                  class: "btn btn-info btn-xs"
                %>
             </li>
            <% end %>

          </div>
        </div>
      </ul>
    <% end %>
  </div>

<div class="center">
  <%= will_paginate %>
</div>
